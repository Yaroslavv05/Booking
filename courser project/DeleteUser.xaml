<Window x:Class="courser_project.DeleteUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:courser_project"
        mc:Ignorable="d"
        Title="DeleteUser" Height="450" Width="800">
    <Grid Background="#99000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.Row="0">
            <Label Content="Select User to Delete" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
            <ComboBox x:Name="userComboBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,10" />
            <Button Content="Delete User" Click="DeleteUser_Click" Width="100" Margin="0,0,10,0" Background="#F7C544" Foreground="Black" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Back" Click="Back_Click" Width="100" Margin="10,0,10,0" Background="#F7C544" Foreground="Black" />
        </StackPanel>
    </Grid>

</Window>
